<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pathfinder_1e_Assistant.MainPage">

    <Grid Margin="30"
          RowDefinitions="Auto,*,Auto">
        <Label Text="Select a character." Grid.Row="0"/>
        <ScrollView x:Name="CharacterView" Grid.Row="1" Margin="3">
            
            <Grid Padding="2" ColumnSpacing="5" RowSpacing="2"
                x:Name="CharacterGrid"
                ColumnDefinitions="*,Auto" >
                
            </Grid>
            
        </ScrollView>
        
        <HorizontalStackLayout Grid.Row="2" Spacing="10">
            <Button Text="Add new character" 
                    Clicked="OnAddNewCharacterClicked"/>
            
        </HorizontalStackLayout>
    </Grid>
    

</ContentPage>
